{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "parser": "@typescript-eslint/parser",

  "env": {
      "es6": true,
      "commonjs": true,
      "browser": true,
      "node": true
  },
  "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/ban-types": "off",
    "no-case-declarations": "off"
  },
  "ignorePatterns": ["./**/*.test.ts", "./build"]
}